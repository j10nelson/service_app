  <p>Email: <%= @user.email %></p>

<h2><%= @user.role.capitalize %></h2>
<h2>Jobs Pending: <%= @jobs_pending %></h2>
<h2>Job Accepted: <%= @jobs_accepted %></h2>
<% end %>
