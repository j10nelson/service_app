
<h2>Account</h2>
<p>Name: <%= @user.first_name %> <%= @user.last_name %></p>
<p>Email: <%= @user.email %></p>

<h2>Jobs Requested</h2>
  <% @user.jobs.each do |job| %>
  <h2 class="job-title">
    <%= link_to job_path(job) do %>
    <%= job.title %></h2>
    <% end %>
    <p><%= job.details %></p>
    <p><%= job.date.strftime('%B %d, %Y') %></p>
    <p><%= job.time.strftime('%I:%M%p')%></p>
  <% end %>
