<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>Please fix <%= pluralize(@user.errors.count, "error") %> below:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="user-new">

<h1>Sign up</h1>

<%= render 'form' %>

<p>Already have an account? <%= link_to "Login", :login %></p>

</div>
