<html>
  <head>
    <meta charset="utf-8">
    <title>Services Offered</title>
  </head>
  <body>
    <header>
      <div class="root-banner">
        <div class="banner-text">
        <h1>Sit back &amp relax.<br>Help is on the way!</h1>
        <!-- <a class="btn btn-full" href="#">I'm hungry</a>
        <a class="btn btn-ghost" href="#">Show me more</a> -->
        </div>
      </div>
    </header>

  <div class="services-offered-home">
    <h2>Services We Offer</h2>
  </div>
  <div class="services-home">
  <% @trade.each do |trade| %>
      <div class="services-offered">
        <div class="services-offered-details">
          <div class="job-title">
          <%= trade.name %>
          </div>
        <% trade.services.each do |service| %>
        <p><%= service.type_of_service.capitalize %> - <%= number_to_currency(service.price) %></p>
        <% end %>
        </div>
      <%= link_to(new_trade_job_path(trade), method: "get", class: 'book-service-button') do%>
      <%= submit_tag("Book", class:"btn-book-home") %>
      <% end %>
    </div>
  <% end %>
</div>
