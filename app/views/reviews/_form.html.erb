<%= form_for [@job, @review] do |f| %>
  <div class="field">
   <%= f.label :rating %><br />
   <%= f.text_field :rating %>
  </div>

  <div class="field">
     <%= f.label :comments %><br />
     <%= f.text_area :comments %>
  </div>

  <br><div class="actions">
     <%= submit_tag "Submit Review" %>
  </div>
<% end %>
