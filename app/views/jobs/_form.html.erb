<%= form_for([@trade, @job], html: {multipart: true}) do |f| %>

  <h2><p> <%= @trade.name.capitalize %> </p></h2>

    <%# @trade.services.each do |service| %>
      <%#= radio_button(:service, :id, service.id) %>
        <!-- <p>Service: <%#= service.type_of_service %></p> </p> -->
        <!-- <p>Price: <%#= service.price %></p> -->
    <%# end %>

    <%= f.select(:service, :id) do %>
      <% @trade.services.all.each do |s| %>
        <%= content_tag(:option, s.type_of_service, value: s.id) %>
      <% end %>
    <% end %>

    <% @trade.services.each do |service| %>
        <p>Price: <%= service.price %></p>
    <% end %>

    <div class="field-job">
      <p>Date: <%= date_field_tag :date %></p>
      <p>Time: <%= f.time_select :datetime, include_blank: true, ampm:true, start_hour: 7, end_hour: 18, minute_step: 5 %></p>
    </div>

    <div class="field-job">
      <%= f.label :note %>
      <%= f.text_area :note %>
    </div><br><br>

    <div class="field-job">
      <%= f.submit(class: "btn-new-job") %>
    </div><br>

<% end %>
