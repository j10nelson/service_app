<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8">
    <title>Services Offered</title>


  </head>
  <body>
    <header>

    </header>

<div class="trades-offered">
<h1>Book your service request today!</h1>
</div>
<div class="services-home">
<% @trade.each do |trade| %>
  <div class="services-offered">
    <div class="services-offered-details">
        <div class="job-title">
<%= trade.name %>
</div>
<% trade.services.each do |service| %>
<p>Service: <%= service.type_of_service %></p>
<p>Price: <%= service.price %></p>
<% end %>
</div>
<%= form_tag(new_trade_job_path(trade), method: "get", class: 'book-service-button') do %>
  <%= submit_tag("Book", class:"btn-book-home") %>
  <% end %>


</div>
</div>

<% end %>

  </body>
</html>
