<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2>Please fix <%= pluralize(@user.errors.count, "error") %> below:</h2>
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1>Review Job</h1>

<% if current_user.role == "client" %>

<%= render 'form' %>



<br><%= link_to 'Back', current_user %>
<% end %>

<% if current_user.role == "worker" %>

<%= render 'form_worker' %>
<% end %>
