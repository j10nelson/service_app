<%= form_for([@trade, @job], html: {multipart: true}) do |f| %>
<%= collection_check_boxes(:trade, :service_ids, @trade.services.all, :id, :type_of_service) %>


  <div class="field">
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.time_select :time %>
  </div>

  <div class="actions">
     <%= f.submit %>
  </div>

<% end %>
